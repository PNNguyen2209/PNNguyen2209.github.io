---
import Header from "../components/Header.astro";
import Project from "../components/Project.astro";
import Sidebar from "../components/Sidebar.astro";

const projects = [
  {
    title: "Multilevel Audio Reconstruction with INRs",
    desc: [
      "Developed a multiscale encoder-decoder using Implicit Neural Representations for high-fidelity audio reconstruction.",
      "Benchmarked on public datasets with strong objective metrics (MSE 0.012, MAE 0.068)."
    ],
    tech: ["PyTorch", "Signal Processing", "Slurm"]
  },
  {
    title: "QuickSilver Graph Database Optimization",
    desc: [
      "Designed performance-critical algorithms for large-scale graph processing to reduce query latency.",
      "Improved estimation, caching, and algorithmic design to cut compute and memory overhead by up to 50%."
    ],
    tech: ["C++", "Optimization", "Graph Processing"]
  },
  {
    title: "RAGTravel Recommendation Map",
    desc: [
      "Built an LLM-powered recommendation backend for city travel suggestions using RAG.",
      "Implemented semantic search with FAISS and LLM-based ranking over Google Maps metadata."
    ],
    tech: ["Python", "FastAPI", "LangChain", "FAISS"]
  }
];
---

<!DOCTYPE html>
<html>
  <Header title="Projects | Phuong Nam Nguyen" />
  <body>
    <div class="content">
      <Sidebar selectedItem="projects" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block"
              ><img src="/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
              <div>Back</div></a
            >
          </div>
          <div class="content-container">
            <h1>Projects</h1>
            <section class="items-container">
              <div class="resouce-items">
                {projects.map((project) => (
                  <Project title={project.title} desc={project.desc} tech={project.tech} />
                ))}
              </div>
            </section>
          </div>
        </div>
      </nav>
    </div>
  </body>
</html>
