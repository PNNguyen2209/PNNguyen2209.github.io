---
import BaseLayout from "./BaseLayout.astro";

const { title, pubDate } = Astro.props;
const dateLabel = pubDate
  ? new Date(pubDate).toLocaleDateString("en-US", {
      month: "long",
      day: "2-digit",
      year: "numeric"
    })
  : "";
---

<BaseLayout title={title}>
  <article class="post">
    <header>
      <p class="eyebrow">Notes</p>
      <h1>{title}</h1>
      {dateLabel && <p class="muted">{dateLabel}</p>}
    </header>
    <div class="post-body">
      <slot />
    </div>
  </article>
</BaseLayout>
